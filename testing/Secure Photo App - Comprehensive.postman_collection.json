				{
					"name": "Sign Up",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const random = Math.random().toString(36).substring(2, 15);",
									"pm.collectionVariables.set(\"random_email\", `testuser_${random}@example.com`);",
									"pm.collectionVariables.set(\"random_username\", `testuser_${random}`);",
									"pm.collectionVariables.set(\"random_password\", \"Password123!\");"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 201\", function () {",
									"    pm.response.to.have.status(201);",
									"});",
									"pm.test(\"Response has a token\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.token).to.not.be.empty;",
									"    pm.collectionVariables.set(\"token\", jsonData.token);",
									"});",
									"pm.test(\"Response has a refresh token cookie\", function () {",
									"    const refreshTokenCookie = pm.cookies.get('refreshToken');",
									"    pm.expect(refreshTokenCookie).to.not.be.empty;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{random_email}}\",\n    \"username\": \"{{random_username}}\",\n    \"password\": \"{{random_password}}\"\n}",
							"options": {
